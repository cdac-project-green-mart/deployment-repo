# ===========================================
# GREEN MART - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ===========================================
# SHARED CONFIGURATION
# ===========================================
COMPOSE_PROJECT_NAME=green-mart

# ===========================================
# DATABASE - PostgreSQL
# ===========================================
POSTGRES_USER=greenmart
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=greenmart
POSTGRES_PORT=5432

# ===========================================
# DATABASE - MongoDB
# ===========================================
MONGO_INITDB_ROOT_USERNAME=greenmart
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGO_PORT=27017

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here_minimum_64_characters_recommended_for_production_use

# ===========================================
# SERVICE PORTS
# ===========================================
API_GATEWAY_PORT=8080
EUREKA_PORT=8761
AUTH_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
PRODUCT_SERVICE_PORT=8084
ORDER_SERVICE_PORT=8085
INVENTORY_SERVICE_PORT=8086
PAYMENT_SERVICE_PORT=8087
CHECKOUT_SERVICE_PORT=8088

# ===========================================
# SERVICE URLS (Internal Docker Network)
# ===========================================
EUREKA_SERVER=http://eureka-server:8761/eureka/
ORDER_SERVICE_URL=http://order-service:8085
INVENTORY_SERVICE_URL=http://inventory-service:8086
PAYMENT_SERVICE_URL=http://payment-service:8087

# ===========================================
# DEVELOPMENT TOOLS (Set to false in production)
# ===========================================
ENABLE_PGADMIN=true
ENABLE_MONGO_EXPRESS=true
PGADMIN_DEFAULT_EMAIL=admin@greenmart.com
PGADMIN_DEFAULT_PASSWORD=admin123
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=admin123

# ===========================================
# RABBITMQ
# ===========================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=greenmart
RABBITMQ_PASSWORD=your_secure_password_here

# ===========================================
# NOTIFICATION SERVICE
# ===========================================
NOTIFICATION_SERVICE_PORT=8089

# ===========================================
# SMTP / EMAIL CONFIGURATION
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_APP_PASSWORD=your-16-character-app-password

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
