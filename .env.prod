# ===========================================
# GREEN MART - Production Environment
# ===========================================
# Copy this to .env and update with your production values
# NEVER commit the actual .env file to git!
# ===========================================

# ==================== DATABASES ====================

# PostgreSQL (Auth, Order, Payment services)
POSTGRES_USER=greenmart
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=greenmart
POSTGRES_PORT=5432

# MongoDB (User, Product, Inventory services)
MONGO_INITDB_ROOT_USERNAME=greenmart
MONGO_INITDB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_PORT=27017

# ==================== JWT ====================

# JWT Authentication (generate with: openssl rand -base64 64)
JWT_SECRET=GENERATE_ME_WITH_openssl_rand_base64_64

# ==================== EUREKA ====================

EUREKA_SERVER=http://eureka-server:8761/eureka/
EUREKA_PORT=8761

# ==================== SERVICE URLS (for checkout-service) ====================

ORDER_SERVICE_URL=http://order-service:8085
INVENTORY_SERVICE_URL=http://inventory-service:8086
PAYMENT_SERVICE_URL=http://payment-service:8087

# ==================== SERVICE PORTS ====================

API_GATEWAY_PORT=8080
AUTH_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
PRODUCT_SERVICE_PORT=8084
ORDER_SERVICE_PORT=8085
INVENTORY_SERVICE_PORT=8086
PAYMENT_SERVICE_PORT=8087
CHECKOUT_SERVICE_PORT=8088

# ==================== DO SPACES (Image Upload) ====================
# Required for product image uploads

DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_KEY=YOUR_DO_SPACES_KEY
DO_SPACES_SECRET=YOUR_DO_SPACES_SECRET
DO_SPACES_CDN_ENDPOINT=https://your-bucket-name.sgp1.cdn.digitaloceanspaces.com

# ==================== OPTIONAL: Admin Tools ====================
# Remove these services from docker-compose.yml in production for security

# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@greenmart.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Mongo Express
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
ME_CONFIG_MONGODB_ADMINUSERNAME=greenmart
ME_CONFIG_MONGODB_ADMINPASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==================== GENERATE PASSWORDS ====================
# 
# Run these commands to generate secure values:
#
#   openssl rand -base64 24    # For database passwords
#   openssl rand -base64 64    # For JWT secret
#
# Then replace the CHANGE_ME placeholders above
# =========================================================
