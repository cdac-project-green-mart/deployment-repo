# ===========================================
# GREEN MART - Production Environment
# ===========================================
# Copy this to .env and update with your production values
# NEVER commit the actual .env file to git!
# ===========================================

# ==================== DATABASES ====================

# PostgreSQL (Auth, Inventory, Order, Payment)
POSTGRES_USER=greenmart
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=greenmart

# MongoDB (User, Product)
MONGO_INITDB_ROOT_USERNAME=greenmart
MONGO_INITDB_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# ==================== SERVICES ====================

# JWT Authentication (generate with: openssl rand -base64 64)
JWT_SECRET=GENERATE_ME_WITH_openssl_rand_base64_64

# Node Environment
NODE_ENV=production

# ==================== DO SPACES (Image Upload) ====================
# Required for product image uploads

DO_SPACES_ENDPOINT=https://sgp1.digitaloceanspaces.com
DO_SPACES_REGION=sgp1
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_KEY=YOUR_DO_SPACES_KEY
DO_SPACES_SECRET=YOUR_DO_SPACES_SECRET
DO_SPACES_CDN_ENDPOINT=https://your-bucket-name.sgp1.cdn.digitaloceanspaces.com

# ==================== EUREKA ====================

EUREKA_HOST=eureka-server
EUREKA_PORT=8761
EUREKA_URL=http://eureka-server:8761/eureka/

# ==================== SERVICE PORTS ====================
# (Usually don't need to change these)

GATEWAY_PORT=8080
EUREKA_PORT=8761
AUTH_PORT=8082
USER_PORT=8083
PRODUCT_PORT=8084
ORDER_PORT=8085
INVENTORY_PORT=8086
PAYMENT_PORT=8087
CHECKOUT_PORT=8088

# ==================== OPTIONAL: Admin Tools ====================
# Set to 'false' to disable in production for security

ENABLE_PGADMIN=false
ENABLE_MONGO_EXPRESS=false

# pgAdmin (if enabled)
PGADMIN_DEFAULT_EMAIL=admin@greenmart.com
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# Mongo Express (if enabled)
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=CHANGE_ME_ADMIN_PASSWORD

# ==================== PRODUCTION TIPS ====================
# 
# 1. Generate secure passwords:
#    openssl rand -base64 24
#
# 2. Generate JWT secret:
#    openssl rand -base64 64
#
# 3. Never use default passwords in production!
#
# 4. Consider using Docker secrets for sensitive values
#
# 5. Set up regular database backups
#
# =========================================================
