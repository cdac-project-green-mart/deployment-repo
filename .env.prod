# GREEN MART - Production Environment
# IMPORTANT: Replace all placeholder values before deploying!
COMPOSE_PROJECT_NAME=green-mart-prod

# PostgreSQL - USE STRONG PASSWORDS!
POSTGRES_USER=greenmart_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=greenmart
POSTGRES_PORT=5432

# MongoDB - USE STRONG PASSWORDS!
MONGO_INITDB_ROOT_USERNAME=greenmart_prod
MONGO_INITDB_ROOT_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
MONGO_PORT=27017

# Security - GENERATE NEW SECRET!
# Run: openssl rand -base64 64
JWT_SECRET=GENERATE_NEW_SECRET_WITH_OPENSSL

# Ports
API_GATEWAY_PORT=8080
EUREKA_PORT=8761
AUTH_SERVICE_PORT=8082
USER_SERVICE_PORT=8083
PRODUCT_SERVICE_PORT=8084
ORDER_SERVICE_PORT=8085
INVENTORY_SERVICE_PORT=8086
PAYMENT_SERVICE_PORT=8087
CHECKOUT_SERVICE_PORT=8088

# Service URLs
EUREKA_SERVER=http://eureka-server:8761/eureka/
ORDER_SERVICE_URL=http://order-service:8085
INVENTORY_SERVICE_URL=http://inventory-service:8086
PAYMENT_SERVICE_URL=http://payment-service:8087

# Dev Tools - DISABLED IN PRODUCTION
ENABLE_PGADMIN=false
ENABLE_MONGO_EXPRESS=false

# Logging
LOG_LEVEL=INFO
